{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6", 
            "es2018", 
            "esnext.asynciterable"
        ],
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}